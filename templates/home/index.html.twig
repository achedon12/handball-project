            </section>
            <img src="{{ asset('images/Loisirs.jpg') }}" alt="img" class="img">
        </section>

        <section class="news reveal_bottom">
           <section class="news-content">
               {% for post in posts %}
                   {% set url = path('app_post_show',{'id': post.id}) %}
                   <a class="news-element" id="{{ post.id }}" href="{{ url}}">
                       <h3 class="name">{{ post.author }}</h3>
                       <p class="content">{{ post.title }}</p>
                       {% set src = '/posts/images/' ~ post.urlPhoto %}
                       <img src="{{ asset(src) }}" alt="news-img" class="news-element-img">
                   </a>
               {% endfor %}
           </section>
            <ul class="page">
                <li class="page-link-li"><a href="#" class="page-link-a"><</a></li>
                <li class="page-link-li"><a href="#" class="page-link-a">1</a></li>
