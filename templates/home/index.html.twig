{% extends 'base.html.twig' %}



{% block title %}Accueil{% endblock %}
{% block body %}
    <link rel="stylesheet" href="{{ asset("css/homePage.css") }}">
    <link rel="stylesheet" href="{{ asset("css/header.css") }}">
    <main>
    <header>
        <a href="{{ path('app_home') }}"><img src="{{ asset('images/logo.png') }}" alt="logo"></a>
    </header>
        <section class="sidebar">
            <div class="tiers">
                <h2>Équipes</h2>
                <ul>
                    <li><a href="{{ path('app_equipe') }}">Afficher une équipe</a></li>
                    <li><a href="{{ path('app_equipe_edit') }}">Modifier une équipe</a></li>
                    <li><a href="{{ path('app_equipe_add') }}">Ajouter une équipe</a></li>
                    <li><a href="{{ path('app_equipe_delete') }}">Supprimer une équipe</a></li>
                </ul>
            </div>
            <div class="tiers">
                <h2>Matches</h2>
                <ul>
                    <li><a href="{{ path('app_match') }}">Afficher un match</a></li>
                    <li><a href="{{ path('app_match_edit') }}">Modifier un match</a></li>
                    <li><a href="{{ path('app_match_create') }}">Ajouter un match</a></li>
                    <li><a href="{{ path('app_match_delete') }}">Supprimer une match</a></li>
                </ul>
            </div>
            <div class="tiers">
                <h2>Plannings</h2>
                <ul>
                    <li><a href="#">Voir le planning</a></li>
                </ul>
            </div>
            <div class="tiers">
                {% if is_granted('ROLE_USER') or is_granted('ROLE_COACH') or is_granted('ROLE_ADMIN') %}
                    <h2>{{ user.pseudo }}</h2>
                    <ul>
                        <li><a href="{{ path('app_account') }}">Mon compte</a></li>
                        <li><a href="{{ path('app_logout') }}">Se deconnecter</a></li>
                    </ul>
                {% else %}
                    <h2>Mon compte</h2>
                    <ul>
                        <li><a href="{{ path("app_login")}}">Connexion</a></li>
                    </ul>
                {% endif %}

            </div>
        </section>
        <img src="{{ asset('images/banniere_2.png') }}" alt="banner" class="banner">

        <section class="match reveal_bottom">
            <section class="nextMatch matchSection">
                <h2>Prochain match</h2>
                <article>
                    <p class="next-match-date"></p>
                    <p class="next-match-team1"></p>
                    <p class="next-match-time"></p>
                    <p class="next-match-team2"></p>
                    <p class="next-match-location"></p>
                    <p class="next-match-remaining-time"></p>
                </article>
            </section>

            <section class="lastMatch matchSection">
            <h2>Match précédent</h2>
                <article>
                    <p class="last-match-date"></p>
                    <p class="last-match-team1"></p>
                    <p class="last-match-time"></p>
                    <p class="last-match-team2"></p>
                    <p class="last-match-location"></p>
                </article>
            </section>

        </section>
        <section class="pic-ctn reveal_bottom">
            <section class="aboutOur">
                <h1>A propos de nous</h1>
                <p>Uxor mortalis acerbitati quaedam regni nihil
                    qui nocendum turgida germanitate per quaedam
